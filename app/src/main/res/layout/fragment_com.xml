<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/com_frame"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#424458"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_3"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="10dp"
        android:background="@drawable/shape_bg_com" >

        <ImageView
            android:id="@+id/com_seach_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:padding="7dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/com_seach_icon"
            android:text="查找通讯录"
            android:textColor="#B5B5B5"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/com_seach_add"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:padding="7dp"
            android:src="@mipmap/ic_launcher" />




    </RelativeLayout>

    <com.flyco.tablayout.SlidingTabLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/com_slide"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#424458"
        app:tl_indicator_color="#FFFFFF"
        app:tl_tab_padding="0dp"
        app:tl_tab_space_equal="true"
        app:tl_textSelectColor="#FFFFFF"
        app:tl_textUnselectColor="#FFFFFF"
        app:tl_textsize="15sp"
        app:tl_underline_color="#FFFFFF" />

    <android.support.v4.view.ViewPager
        android:id="@+id/com_vp"
        android:background="#383A4C"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>




