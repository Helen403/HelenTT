<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F8F9"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#354055">

        <ImageView
            android:id="@+id/b_phone_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/birthday_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingBottom="12dp"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:paddingTop="12dp"
            android:text="绑定手机 "
            android:textColor="#fff"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/b_phone_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="12dp"
            android:paddingLeft="15dp"
            android:paddingRight="12dp"
            android:paddingTop="12dp"
            android:text="下一步"
            android:textColor="#fff"
            android:textSize="16sp" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"

            android:text="国家和地区"
            android:textColor="#1F2123" />

        <TextView
            android:id="@+id/b_phone_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_bind_phone"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:text="中国"
            android:textColor="#808080" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="105dp"

            android:text="+86"
            android:textColor="#1F2123" />

        <EditText
            android:inputType="phone"
            android:id="@+id/b_phone_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_bind_phone"
            android:hint="请输入你的手机号"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:textCursorDrawable="@drawable/shape_color_curso_black"
            android:paddingTop="12dp"
            android:textColor="#808080"
            android:textColorHint="#808080"
            android:textSize="14sp" />


    </RelativeLayout>


</LinearLayout>