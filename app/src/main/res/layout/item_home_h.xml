<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:background="#3D3A4F"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/home_h_h_icon"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:src="@mipmap/quila" />

    <TextView
        android:id="@+id/home_h_h_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/home_h_h_icon"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/home_h_h_icon"
        android:text="08:35"
        android:textColor="#EBE9F7"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/home_h_h_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_h_h_time"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/home_h_h_icon"
        android:text="公司开会"
        android:textColor="#A3A3B4"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/home_h_h_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/home_h_h_time"
        android:layout_marginLeft="10dp"

        android:layout_toRightOf="@+id/home_h_h_time"
        android:text="今天"
        android:textColor="#EBE9F7"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/home_h_h_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/home_h_h_time"
        android:layout_marginLeft="10dp"

        android:layout_toRightOf="@+id/home_h_h_today"
        android:text="周四"
        android:textColor="#EBE9F7"
        android:textSize="14sp" />


    <View
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/home_h_h_icon"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#5C5A6E" />


</RelativeLayout>